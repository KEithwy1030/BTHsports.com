{
  "name": "live-sports-platform",
  "version": "1.0.0",
  "description": "在线看球直播平台",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"npm run client:dev\"",
    "server:dev": "nodemon server/index.js",
    "client:dev": "cd client && npm run dev",
    "build": "npm run build:client",
    "build:client": "cd client && npm install && npm run build",
    "start": "node server/index.js",
    "prestart": "npm run build:client",
    "crawler": "node server/crawler/index.js"
  },
  "engines": {
    "node": ">=20.0.0 <21.0.0"
  },
  "keywords": [
    "live",
    "sports",
    "streaming"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "cheerio": "^1.0.0-rc.12",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "html-entities": "^2.6.0",
    "mysql2": "^3.6.5",
    "node-cron": "^3.0.3",
    "puppeteer-core": "^21.0.0",
    "redis": "^4.6.12"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2"
  }
}
